<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/customThemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Theme Creator"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spacer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick your colors!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/colot_1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color 1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/custom_color_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="#" />

    <TextView
        android:id="@+id/colot_2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color 2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/custom_color_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="#" />

    <TextView
        android:id="@+id/colot_3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color 3"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/custom_color_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="#" />

    <Button
        android:id="@+id/custom_theme_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create!" />

</LinearLayout>