<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AntennaPod.TextView.Heading"
        android:text="Not sure what to listen to?"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <fragment
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="de.danoeh.antennapod.fragment.RandomPodcastFragment"
        android:id="@+id/randomEpisodeFrag"
        />

    <fragment
        android:text="Search Results"
        android:id="@+id/centralizedFragment"
        android:name="de.danoeh.antennapod.fragment.CentralizedSearchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>